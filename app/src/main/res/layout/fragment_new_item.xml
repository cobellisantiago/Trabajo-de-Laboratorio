<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F1F1">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/buttonSacarFoto"
            android:layout_width="110dp"
            android:layout_height="35dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/bttn_rounded_yellow"
            android:text="@string/botonSacarFoto"
            android:textColor="@android:color/background_dark"
            app:layout_constraintStart_toStartOf="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@+id/editTextCaloriasPlato" />

        <Button
            android:id="@+id/buttonCrearPlato"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="132dp"
            android:layout_height="43dp"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bttn_rounded_yellow"
            android:text="@string/alta_plato_guardar"
            android:textColor="@android:color/background_dark"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonSacarFoto" />

        <EditText
            android:id="@+id/editTextNombrePlato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/textView4"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editTextDescripcionPlato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            app:layout_constraintEnd_toEndOf="@+id/editTextNombrePlato"
            app:layout_constraintTop_toBottomOf="@+id/editTextNombrePlato" />

        <EditText
            android:id="@+id/editTextPrecioPlato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:inputType="numberDecimal"
            app:layout_constraintEnd_toEndOf="@+id/editTextDescripcionPlato"
            app:layout_constraintTop_toBottomOf="@+id/editTextDescripcionPlato" />

        <EditText
            android:id="@+id/editTextCaloriasPlato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:inputType="number"
            app:layout_constraintEnd_toEndOf="@+id/editTextPrecioPlato"
            app:layout_constraintTop_toBottomOf="@+id/editTextPrecioPlato" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/alta_plato_nombre"
            app:layout_constraintBaseline_toBaselineOf="@+id/editTextNombrePlato"
            app:layout_constraintEnd_toStartOf="@+id/editTextNombrePlato"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/alta_plato_descripcion"
            app:layout_constraintBaseline_toBaselineOf="@+id/editTextDescripcionPlato"
            app:layout_constraintStart_toStartOf="@+id/textView4" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/alta_platp_precio"
            app:layout_constraintBaseline_toBaselineOf="@+id/editTextPrecioPlato"
            app:layout_constraintStart_toStartOf="@+id/textView5" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/alta_plato_calorias"
            app:layout_constraintBaseline_toBaselineOf="@+id/editTextCaloriasPlato"
            app:layout_constraintStart_toStartOf="@+id/textView6" />

        <ImageView
            android:id="@+id/imageViewPlato"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintBottom_toBottomOf="@+id/buttonSacarFoto"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/buttonSacarFoto"
            app:layout_constraintTop_toTopOf="@+id/buttonSacarFoto"
            app:srcCompat="@drawable/hamburguesa" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

