<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:id="@+id/scrollView2"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F1F1">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="cobelli_moix_tomas.isi.frsf.utn.sendmeal.NewItem">

        <Button
            android:id="@+id/buttonCrearPlato"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="132dp"
            android:layout_height="43dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bttn_rounded"
            android:text="@string/alta_plato_guardar"
            android:textColor="@android:color/background_dark"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextCaloriasPlato" />

        <EditText
            android:id="@+id/editTextIdPlato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="8dp"
            android:ems="10"
            android:inputType="number"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editTextNombrePlato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="@+id/editTextIdPlato"
            app:layout_constraintTop_toBottomOf="@+id/editTextIdPlato" />

        <EditText
            android:id="@+id/editTextDescripcionPlato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            app:layout_constraintEnd_toEndOf="@+id/editTextNombrePlato"
            app:layout_constraintTop_toBottomOf="@+id/editTextNombrePlato" />

        <EditText
            android:id="@+id/editTextPrecioPlato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:inputType="numberDecimal"
            app:layout_constraintEnd_toEndOf="@+id/editTextDescripcionPlato"
            app:layout_constraintTop_toBottomOf="@+id/editTextDescripcionPlato" />

        <EditText
            android:id="@+id/editTextCaloriasPlato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:inputType="number"
            app:layout_constraintEnd_toEndOf="@+id/editTextPrecioPlato"
            app:layout_constraintTop_toBottomOf="@+id/editTextPrecioPlato" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="70dp"
            android:text="@string/id_alta_plato"
            app:layout_constraintBaseline_toBaselineOf="@+id/editTextIdPlato"
            app:layout_constraintEnd_toStartOf="@+id/editTextIdPlato"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/alta_plato_nombre"
            app:layout_constraintBaseline_toBaselineOf="@+id/editTextNombrePlato"
            app:layout_constraintStart_toStartOf="@+id/textView3" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/alta_plato_descripcion"
            app:layout_constraintBaseline_toBaselineOf="@+id/editTextDescripcionPlato"
            app:layout_constraintStart_toStartOf="@+id/textView4" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/alta_platp_precio"
            app:layout_constraintBaseline_toBaselineOf="@+id/editTextPrecioPlato"
            app:layout_constraintStart_toStartOf="@+id/textView5" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/alta_plato_calorias"
            app:layout_constraintBaseline_toBaselineOf="@+id/editTextCaloriasPlato"
            app:layout_constraintStart_toStartOf="@+id/textView6" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

