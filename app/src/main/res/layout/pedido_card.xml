<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardViewPlatoPedido"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/buttonMinusPlato"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="150dp"
            android:background="@drawable/button_completly_circle"
            android:text="@string/buttonMinusPlato"
            android:textColor="@android:color/background_dark"
            app:layout_constraintBaseline_toBaselineOf="@+id/textViewPrecioPlatoPedido"
            app:layout_constraintStart_toEndOf="@+id/textViewPrecioPlatoPedido" />

        <Button
            android:id="@+id/buttonPlusPlato"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/button_completly_circle"
            android:text="@string/buttonPlusPlato"
            android:textColor="@android:color/background_dark"
            app:layout_constraintBottom_toBottomOf="@+id/editTextCantidadPlato"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/editTextCantidadPlato"
            app:layout_constraintTop_toTopOf="@+id/editTextCantidadPlato" />

        <Button
            android:id="@+id/botonAgregarAMiPedido"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="145dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bttn_rounded"
            android:text="@string/buttonAgregarAMiPedido"
            android:textColor="@android:color/background_dark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageCardPlatoPedido"
            app:layout_constraintVertical_bias="1.0" />

        <EditText
            android:id="@+id/editTextCantidadPlato"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginStart="2dp"
            android:ems="4"
            android:inputType="number"
            android:textSize="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/buttonMinusPlato"
            app:layout_constraintStart_toEndOf="@+id/buttonMinusPlato"
            app:layout_constraintTop_toTopOf="@+id/buttonMinusPlato" />

        <TextView
            android:id="@+id/textViewNombrePlatoPedido"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/lato_bold"
            android:text="@string/nombrePlatoPedido"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageCardPlatoPedido" />

        <TextView
            android:id="@+id/textViewDescripcionPlatoPedidos"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/lato"
            android:text="@string/descripcionPLatoPedido"
            app:layout_constraintStart_toStartOf="@+id/textViewNombrePlatoPedido"
            app:layout_constraintTop_toBottomOf="@+id/textViewNombrePlatoPedido" />

        <TextView
            android:id="@+id/textViewPrecioPlatoPedido"
            android:layout_width="98dp"
            android:layout_height="35dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/lato"
            android:text="@string/precioPlatoPedido"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/textViewDescripcionPlatoPedidos"
            app:layout_constraintTop_toBottomOf="@+id/textViewDescripcionPlatoPedidos" />

        <androidx.cardview.widget.CardView
            android:id="@+id/imageCardPlatoPedido"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageViewPlatoPedido"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/hamburguesa" />
        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>